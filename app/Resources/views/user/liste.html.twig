{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre-liste">Liste des Utilisateurs :</h1>
    <div class="table-responsive">
        <table id="userTable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Patenaire</th>
                <th>Role</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('fos_user_profile_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                    <td>{% for partenaire in  user.partenaires %}{{ partenaire }}{% endfor %}</td>
                    <td>{% for role in user.roles %}{{ user.role }}{% endfor %}</td>
                    <td><input type="checkbox" aria-label="Checkbox for following text input" disabled></td>
                    <script>
                        $(function (){
                            if({{ user.enabled }}){
                                $("input:checkbox").prop('checked',true);
                            }else{
                                $("input:checkbox").prop('checked', false);
                            }
                        });
                    </script>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('fos_user_profile_edit', { 'id': user.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
            <a href="{{ path('fos_user_registration_register') }}">Cr√©er un nouvel utilisateur</a>
        </li>
    </ul>

{% endblock %}