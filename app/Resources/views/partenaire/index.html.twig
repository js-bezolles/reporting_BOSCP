{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titre-liste">Liste des Partenaires</h1>
    <hr />
    <table id="partenaireTable" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for partenaire in partenaires %}
            <tr>
                <td><a href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">{{ partenaire.id }}</a></td>
                <td>{{ partenaire.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('partenaire_show', { 'id': partenaire.id }) }}">
                        <span class="glyphicon glyphicon-eye-open"></span>
                    </a>
                    <a class="btn btn-primary" href="{{ path('partenaire_edit', { 'id': partenaire.id }) }}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="text-align: center">
        <a class="btn btn-success" href="{{ path('partenaire_new') }}">
            Ajouter un Partenaire <span class="glyphicon glyphicon-plus"></span>
        </a>
    </div>


    <script>
        $(document).ready(function() {
            $('table#partenaireTable').DataTable(
                {
                    "language":{
                        "url" :"//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                }
            );
        } );
    </script>
{% endblock %}
